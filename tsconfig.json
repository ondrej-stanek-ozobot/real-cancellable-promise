{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2018",
    "lib": ["ES2018"],

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "node",

    /* Emit */
    "declaration": true,
    "outDir": "./dist",
    "noEmit": true,
    "noEmitOnError": true,

    /* Interop Constraints */
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noFallthroughCasesInSwitch": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
